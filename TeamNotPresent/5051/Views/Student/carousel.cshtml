
@{
    ViewBag.Title = "carousel";
}
<script src="~/Scripts/bootstrap.js"></script>
<ol class="breadcrumb">
    <li><a href="#">Student</a></li>
    <li class="active">Carousel</li>
</ol>
<body>
    <br>

    <div class="container">
        <div class=" row">
            <div class="col-sm-12">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                     
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img class="carousel-item-img img-fluid center-block" src="~/Content/img/card3bw.png" alt="Los Angeles" />
                        </div>

                        <div class="item">
                            <img class="carousel-item-img img-fluid center-block" src="~/Content/img/card1.png" alt="Chicago" />
                        </div>

                        <div class="item">
                            <img class="carousel-item-img img-fluid center-block" src="~/Content/img/card2.png" alt="New York" />
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
