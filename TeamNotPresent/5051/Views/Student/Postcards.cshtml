@model _5051.Models.StudentHomeViewModel
@{

    ViewBag.Title = "PostCards";
}

<script src="~/Scripts/bootstrap.js"></script>
<ol class="breadcrumb">
    <li><a href="#">Student</a></li>
    <li class="active">Post Cards</li>
</ol>
<div class="page-header">
    <h3>Post Card Gallery<small></small></h3>
</div>

<body>

    <div class="jumbotron">
        <div class="container">
            <div class=" row">
                <div class="col-sm-12">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">

                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                            <li data-target="#myCarousel" data-slide-to="3"></li>
                            <li data-target="#myCarousel" data-slide-to="4"></li>

                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            @*<div class="item active">
                                <img class="carousel-item-img img-fluid center-block" src="~/Content/img/card1.png" alt="Pyramid Egypt" />
                            </div>*@
                            @*<div class="item">
                                    <img class="carousel-item-img img-fluid center-block" src="~/Content/img/card2.png" alt="Fiji" />
                                </div>
                                <div class="item">
                                    <img class="carousel-item-img img-fluid center-block" src="~/Content/img/card3bw.png" alt="Sydney AU" />
                                </div>
                                <div class="item">
                                    <img class="carousel-item-img img-fluid center-block" src="~/Content/img/card4bw.png" alt="Taj Mahal IN" />
                                </div>
                                <div class="item">
                                    <img class="carousel-item-img img-fluid center-block" src="~/Content/img/card5.png" alt="Brooklyn Bridge NY" />
                                </div>*@

                            @{
                                var count = 0;
                                foreach (var item in Model.MapPinLocationsList)
                                {
                                    var isActive = "";

                                    if (count == 0)
                                    {
                                        isActive = "active";
                                        count++;
                                    }

                                    <div class="item PostCardSize @isActive">
                                        <img class="carousel-item-img img-fluid center-block PostCardSize " src="@item.Uri" alt="@item.Heading" />
                                    </div>
                                }
                            }
                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>