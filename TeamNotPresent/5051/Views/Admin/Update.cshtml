                <div class="col-sm-4">
                    @Html.EditorFor(m => m.Name)

                </div>
            </div>

            <div class="row">
                <div class="col-sm-5 text-right">
                    <span class="label label-default">
                        @Html.DisplayNameFor(m => m.PowerId)
                        </span>
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.PowerId)
                </div>
            </div>

            <div class="row">
