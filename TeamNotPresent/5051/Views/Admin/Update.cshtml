@model _5051.Models.AdminProfileModel
@{
    ViewBag.Title = "Update";
}
<ol class="breadcrumb">
    <li><a href="~/Admin/MainHome">Home</a></li>
    <li><a href="~/Admin/StudentHome">Students</a></li>
    <li class="active">Edit</li>
</ol>

<style>
    .sidebar-nav-fixed {
        width: 14%;
    }
</style>


        @using (Html.BeginForm())
        {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"></h3>
    </div>
    <div class="panel-body">
        <div class="container">
            <div class="row">
                <div class="col-sm-5 text-right">
                    <span class="label label-default" style="font-size:medium">
                        @Html.DisplayNameFor(m => m.Uri)
                    </span>
                </div>
                <div class="caption col-sm-4">
                    <button type="button" @*class="btn btn-info btn-lg"*@ data-toggle="modal" data-target="#chgProPic">Add Picture</button>
                </div>
                <br />
                <!-- Modal -->
                <div class="modal fade" id="chgProPic" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <label>Upload File</label>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <input type="file">
                                    <p class="help-block">Only png and jpg allowed</p>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Submit</button>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <br />

            <div class="row">
                <div class="col-sm-5 text-right">
                    <span class="label label-default" style="font-size:medium">
                        @Html.DisplayNameFor(m => m.Name)
                    </span>
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.Name)

                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-sm-5 text-right">
                    <span class="label label-default" style="font-size:medium">
                        @Html.DisplayNameFor(m => m.PowerId)
                    </span>
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.PowerId)
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-sm-5 text-right">
                    <span class="label label-default" style="font-size:medium">
                        @Html.DisplayNameFor(m => m.PersonalContact)
                    </span>
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.PersonalContact)
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-sm-5 text-right">
                    <span class="label label-default" style="font-size:medium">
                        @Html.DisplayNameFor(m => m.GuardianContact)
                    </span>
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.GuardianContact)
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-sm-5 text-right">
                    <span class="label label-default" style="font-size:medium">
                        @Html.DisplayNameFor(m => m.Address)
                    </span>
                </div>
                <div class="col-sm-4">
                    @Html.EditorFor(m => m.Address)
                </div>
            </div>

            <br />
            <br />

            <div class="row">
                <div class="col-sm-5 text-right">
                </div>
                <div class="col-md-4">

                    <input type="submit" value="Update" class="btn btn-primary">
                    @Html.ActionLink("Cancel", "StudentHome", new { id = Model.Id }, new { @class = "btn btn-success" })


                </div>
            </div>
        </div>

  
        </div>
    </div>
        }



