
@{
    ViewBag.Title = "MainHome";
}



<style>
    .sidebar-nav-fixed {
        width: 14%;
    }

    .boxed-grey {
        background: #f9f9f9;
        background-color: dodgerblue;
        padding: 20px;
    }

    .team h4 {
        margin-bottom: 10px;
    }

    .avatar {
        margin-bottom: 20px;
    }

    .home-section {
        padding-top: 110px;
        padding-bottom: 110px;
        display: block;
        position: relative;
        z-index: 120;
    }

    .bg {
        /*/* The image used */
        /*background-image: url('../../Content/img/portfolio-1.jpg');*/
        background-color: dodgerblue ;
        /* Full height */
        height: 70%;
        /* Center and scale the image nicely */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;

    }

    
</style>

<div class="bg">
    <section class="home-section text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="wow bounceInUp" data-wow-delay="0.2s">
                        <div class="team boxed-grey">
                            <div class="inner" style="font-family:'Comic Sans MS'; font-weight:bold; color:white">
                                <div class="avatar">
                                    <a href="~/Admin/StudentHome">
                                        <img src="~/Content/img/student-icon.png" alt="" class="img-responsive img-circle" style="width:223px;height:223px;" />
                                    </a>
                                </div>
                                
                                <h4>
                                 <strong>Student</strong></h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="wow bounceInUp" data-wow-delay="0.5s">
                        <div class="team boxed-grey">
                            <div class="inner" style="font-weight:bold; color:white">


                                <div class="avatar">
                                    <a href="~/Admin/Report">
                                        <img src="~/Content/img/statistics-market-icon.png" alt="" class="img-responsive img-circle" style="width:223px;height:223px;" />
                                    </a>
                                </div>
                                <h4><strong>Report</strong></h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="wow bounceInUp" data-wow-delay="0.8s">
                        <div class="team boxed-grey">
                            <div class="inner" style="font-family:'Comic Sans MS'; font-weight:bold; font-size:16px; color:white">


                                <div class="avatar">
                                    <a href="~/Admin/StudentCalendar">
                                        <img src="~/Content/img/calendar.png" alt="" class="img-responsive img-circle" style="width:223px;height:223px;" />
                                    </a>
                                </div>
                                <h4><strong>Calendar</strong></h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="wow bounceInUp" data-wow-delay="1s">
                        <div class="team boxed-grey">
                            <div class="inner" style="font-family:'Comic Sans MS'; font-weight:bold; font-size:large; color:white">


                                <div class="avatar">
                                    <a href="~/Admin/Index">
                                        <img src="~/Content/img/Logout-512.png" alt="" class="img-responsive img-circle" style="width:223px;height:223px;" />
                                    </a>
                                </div>
                                <h4><strong>Logout</strong></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



